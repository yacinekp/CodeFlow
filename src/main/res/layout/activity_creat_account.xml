<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/fn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODE FLOW"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:fontFamily="serif"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <!-- Username Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username :"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Username Input -->
        <EditText
            android:id="@+id/CreateAccountUserName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:padding="12dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/edit_text"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Username Error -->
        <TextView
            android:id="@+id/tvUsernameError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#FF6B6B"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:paddingStart="40dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Email Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/btnCreateAccountEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:padding="12dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/edit_text"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Email Error -->
        <TextView
            android:id="@+id/tvEmailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#FF6B6B"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:paddingStart="40dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Password Label -->
        <TextView
            android:id="@+id/labelPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/btnCreateAccountPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:padding="12dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/edit_text"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Password Error -->
        <TextView
            android:id="@+id/tvPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#FF6B6B"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:paddingStart="40dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Confirm Password Label -->
        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm password"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="6dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/btnCreateAccountConfirmPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:padding="12dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/edit_text"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Confirm Password Error -->
        <TextView
            android:id="@+id/tvConfirmPasswordError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#FF6B6B"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            android:paddingStart="40dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <!-- Create Account Button -->
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_marginBottom="12dp"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:padding="12dp"/>

        <!-- Go to Login Button -->
        <Button
            android:id="@+id/btnGoToLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>
</ScrollView>