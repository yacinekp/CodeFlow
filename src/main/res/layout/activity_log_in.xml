<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@drawable/fn">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODE FLOW"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:fontFamily="serif"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"/>

    <!-- CHANGED: Username OR Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username or Email :"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginBottom="6dp"
        android:fontFamily="serif"
        android:textStyle="italic"/>

    <!-- CHANGED: Hint updated -->
    <EditText
        android:id="@+id/idusername"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Username or Email"
        android:textSize="18sp"
        android:inputType="text"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:fontFamily="serif"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="serif"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/idpassword"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:background="@android:drawable/edit_text"
        android:fontFamily="serif"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:textStyle="italic"/>

    <!-- Regular options (visible by default) -->
    <LinearLayout
        android:id="@+id/regularOptionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="14sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:textStyle="italic"/>
    </LinearLayout>

    <!-- Error options (hidden by default, shown only when login fails) -->
    <LinearLayout
        android:id="@+id/errorOptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvErrorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login failed. What would you like to do?"
            android:textSize="16sp"
            android:textColor="#FF6B6B"
            android:layout_marginBottom="12dp"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCreateNewAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:fontFamily="serif"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="14sp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:fontFamily="serif"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>